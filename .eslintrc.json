{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "xo",
  "overrides": [
    {
      "extends": ["xo-typescript"],
      "files": [".ts", ".tsx"]
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["Error", 2],
    "@typescript-eslint/indent": ["Error", 2],
    "object-curly-spacing": ["Error", "always"]
  }
}
