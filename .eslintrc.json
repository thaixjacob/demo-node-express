{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"xo",
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"overrides": [
		{
			"extends": ["xo-typescript"],
			"files": [".ts", ".tsx"]
		}
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint"],
	"ignorePatterns": ["*/public//.js"],

	"rules": {
		"indent": ["Error", 2],
		"object-curly-spacing": ["Error", "always"]
	}
}
